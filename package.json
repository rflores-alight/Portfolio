{
  "name": "rafa-portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "ci:amplify": "nvm use 20 && npm ci --include=dev && npm run build",
    "prebuild": "node scripts/gen-sitemap.mjs",
    "build": "vite build",
    "snap": "react-snap --debug --timeout 120000",
    "postbuild": "react-snap --debug --timeout 120000",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@icons-pack/react-simple-icons": "^13.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.542.0",
    "next": "^15.5.4",
    "prop-types": "^15.8.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "shadcn": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "react-snap": "^1.13.1",
    "sitemap": "^8.0.0",
    "tailwindcss": "^4.1.12",
    "vite": "^7.1.2",
    "vite-plugin-ssr": "^0.4.85"
  },
  "reactSnap": {
    "source": "dist",
    "inlineCss": false,
    "skipThirdPartyRequests": true,
    "concurrency": 1,
    "crawl": false,
    "puppeteerArgs": [
     "--no-sandbox",
     "--disable-setuid-sandbox",
     "--disable-gpu",
     "--no-zygote",
     "--single-process"
   ],
    "include": [
      "/",
      "/lite/",
      "/case-studies/ai-swing-coach-mobile-trading",
      "/case-studies/cutting-late-stage-defects-with-design-system-guardrails",
      "/case-studies/design-strategy-innovation-raising-mobile-quality-at-bmo"
    ]
  }
}
